<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.irfanmolla.learnstack.Home"
    tools:showIn="@layout/app_bar_home">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:scaleX="1.6999"
                android:src="@drawable/image4"
                android:layout_weight="0.14" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-259dp"
                android:gravity="center"
                android:textColor="#f0f2efef"
                android:text="Get Skilled,\nGet Hired"

                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#424b68"
                android:gravity="center"
                android:text="In-depth and Affordable\nOnline courses to\nkickstart your Career"
                android:textColor="@color/learnstack3"
                android:textSize="23sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="#04ca67"
                android:elevation="50dp"
                android:text="View Courses"
                android:textColor="@color/learnstack3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:gravity="center"
                android:text="Our Courses"
                android:textColor="@color/learnstack"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Master in-demand skills. Learn\nonline at your own pace. Get\nmentored by an industry expert."
                android:textSize="20dp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="175dp">
                <include layout="@layout/activity_courses"/>


            </HorizontalScrollView>


           <android.support.v7.widget.CardView
               android:layout_marginTop="45dp"
               app:cardCornerRadius="9dp"
               android:layout_width="match_parent"
               android:layout_height="365dp"
               android:padding="50dp"
               app:cardElevation="50dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="How does it work?"
                   android:textStyle="bold"
                   android:textSize="35dp"
                   android:textColor="@color/learnstack"
                   android:gravity="center"
                   android:layout_marginTop="22dp" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textStyle="bold"
                   android:layout_marginTop="63dp"
                   android:gravity="center"
                   android:text="Learnstack's personalized\napproach is designed to help you\nachieve your goals and advance\nyour career."/>
               <HorizontalScrollView
                   android:id="@+id/hsv2"
                   android:layout_marginTop="175dp"
                   android:layout_width="match_parent"
                   android:layout_height="200dp">

                   <include layout="@layout/activity_how_does_it_work"/>

               </HorizontalScrollView>

           </android.support.v7.widget.CardView>


            <TextView
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textStyle="bold"
                android:textSize="35dp"
                android:textColor="@color/learnstack"
                android:gravity="center"
                android:layout_marginTop="35dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="A quick glance through the points\nthat make us stand out."/>

            <HorizontalScrollView
                android:id="@+id/hsv3"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <include layout="@layout/activity_features"/>

            </HorizontalScrollView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="48dp"
                app:cardElevation="50dp"
                android:padding="30dp"
                app:cardCornerRadius="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learnstack alumni\nwork for amazing\ncompanies"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:textColor="@color/learnstack"
                    android:gravity="center"
                    />
                <HorizontalScrollView
                    android:id="@+id/hsv4"
                    android:layout_marginTop="155dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <include layout="@layout/activity_alumni"/>

                </HorizontalScrollView>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
